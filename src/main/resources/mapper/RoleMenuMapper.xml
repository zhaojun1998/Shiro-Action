<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="im.zhaojun.mapper.RoleMenuMapper">
    <sql id="Base_Column_List">
        role_id,
        menu_id
    </sql>
    <resultMap id="BaseResultMap" type="im.zhaojun.model.RoleMenu">
    <result column="role_id" jdbcType="INTEGER" property="roleId" />
    <result column="menu_id" jdbcType="INTEGER" property="menuId" />
  </resultMap>
  <insert id="insert" parameterType="im.zhaojun.model.RoleMenu">
    insert into role_menu (role_id, menu_id)
    values (#{roleId,jdbcType=INTEGER}, #{menuId,jdbcType=INTEGER})
  </insert>
  <insert id="insertSelective" parameterType="im.zhaojun.model.RoleMenu">
    insert into role_menu
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="roleId != null">role_id,</if><if test="menuId != null">menu_id,</if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="roleId != null">#{roleId,jdbcType=INTEGER},</if>
      <if test="menuId != null">#{menuId,jdbcType=INTEGER},</if>
    </trim>
  </insert>

    <insert id="insertMenusWithRole">
        INSERT INTO role_menu(
        role_id, menu_id
        )VALUES
        <foreach collection="menuIds" item="menuId" index="index" separator=",">
            (
            #{roleId}
            ,#{menuId}
            )
        </foreach>
    </insert>

    <delete id="deleteByRoleId">
        delete from role_menu where role_id = #{roleId}
    </delete>

    <insert id="insertRoleMenus">
        INSERT INTO role_menu(
        role_id, menu_id
        )VALUES
        <foreach collection="menuIds" item="menuId" index="index" separator=",">
            (
            #{roleId}
            ,#{menuId}
            )
        </foreach>
    </insert>

    <delete id="deleteByMenuId">
        delete from role_menu where menu_id = #{menuId}
    </delete>

</mapper>